.logIn-form.container.mt-5
  form.shadow.p-4.rounded(action=`${routes.makeRedirectPath(routes.auth, routes.logIn)}` method="POST")
    .form-group.mb-5
      label(for="email") Email
      input(type="email" name="email" placeholder="Email").form-control
    .form-group.mb-5
      label(for="password") password
      input(type="password" name="password" placeholder="password").form-control
    .form-row
      .col
        input(type="submit" value="Log in").btn.btn-primary.form-control
      .col
        a(role="button" href=`${routes.makeRedirectPath(routes.auth, routes.register)}`).btn.btn-primary.form-control Sign Up
